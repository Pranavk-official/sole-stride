<section class="container my-5">
    <div class="container table-responsive text-capitalize">
        <table class="table table-striped table-hover ">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">User</th>
                    <th scope="col">Image</th>
                    <th scope="col">Product</th>
                    <th scope="col">Reason</th>
                    <th scope="col">Status</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                <% returns.forEach((element, index) => { %>
                    <tr class="text-center align-middle">
                        <td><%= index + 1 %></td>
                        <td><%= element.user_id.username %></td>
                        <td><img src="/uploads/product-images/<%= element.product_id.primary_image.name %>" class="img-fluid" alt="Product" width="50" height="50"></td>
                        <td><%= element.product_id.product_name %></td>
                        <td><%= element.reason %></td>
                        <td><%= element.status %></td>
                        <td>
                            <div class="">
                                <button type="button" class="btn btn-success">Approve</button>
                                <button type="button" class="btn btn-danger">Reject</button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</section>