<section class="container-fluid mt-5">

    <div class="header d-flex justify-content-between">
        <h3 class="h3 text-second fw-bold mb-3">Order Details</h3>
    </div>

    <form class="card px-3 py-3" action="/admin/changeStatus/dummy-order-id" method="post">
        <div class="row">
            <div class="col-md-2">
                <label for="form-control">username</label>
                <input type="text" value="John@Doe" class="form-control" readonly>
            </div>
            <div class="col-md-2">
                <label for="form-control">Customer Full Name</label>
                <input type="text" value="John Doe" class="form-control" readonly>
            </div>
            <div class="col-md-2">
                <label for="form-control">Email</label>
                <input type="email" value="JohnDoe@email.com" class="form-control" readonly>
            </div>
            <div class="col-md-6">
                <label for="form-control">Address</label>
                <input type="text"
                    value="John Doe,  123 Main St, Anytown, State, Pin:12345, PH:555-1234"
                    class="form-control" readonly>
            </div>
            
            <div class="col-md-6 form-group my-2">
                <label for="form-control">Payment Method</label>
                <input type="text" class="form-control" value="Credit Card" readonly>
            </div>
            <div class="col-md-6 form-group my-2">
                <label for="form-control">Total Amount</label>
                <input type="hidden" name="product_id" value="dummy-product-id">
                <input type="text" class="form-control" value="$49.99" readonly>
            </div>
            <div class="col-md-6">
                <label for="form-control">Status</label>

                <select name="status" class="form-select" id="">
                    <option value="Shipped">Shipped</option>
                    <option value="Out for Delivery">Out for Delivery</option>
                    <option value="Delivered">Delivered</option>
                </select>
            </div>
            <div class="col-md-6 form-group my-3">
                <input type="submit" value="Update Status" class="form-control mt-2 btn btn-warning">
            </div>
        </div>
    </form>
</section>
<section class="container-fluid mt-5">
    <div class="header d-flex justify-content-between">
        <h3 class="h3 text-second fw-bold mb-3">Ordered Products</h3>
    </div>
</section>