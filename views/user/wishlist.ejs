<section>
  <div class="container">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb justify-content-center">
      <li class="breadcrumb-item"><a href="index.html">Home</a></li>
      <li class="breadcrumb-item"><a href="index.html">Account</a></li>
      <li class="breadcrumb-item active">Wishlist</li>
    </ol>
    <!-- Hero Content-->
    <div class="hero-content pb-5 text-center">
      <h1 class="hero-heading">Your Wishlist</h1>
    </div>
  </div>
</section>

<div class="container mb-5">
  <div class="row">
    <%- include('../partials/user/sidebar.ejs') %>
    <!-- Content  -->
    <section class="col-lg-8">
      <!-- Toolbar-->
      <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
        <h6 class="fs-base mb-0">List of items you added to wishlist:</h6>
      </div>
      <!-- Wishlist-->
      <!-- Item-->
      <% if (products && products.length > 0) { %>
      <% products.forEach((item) => { %>
      <div class="d-sm-flex justify-content-between mt-lg-4 mb-4 pb-3 pb-sm-2  border-bottom text-capitalize">
        <div class="d-block d-sm-flex align-items-start text-center text-sm-start">
          <a class="d-block flex-shrink-0 mx-auto me-sm-4" href="/shop/product/<%- item._id %>" style="width: 10rem;">
            <img class="img-fluid img-thumbnail" src="/uploads/product-images/<%- item.primary_image.name %>" alt="<%- item.product_name %>">
          </a>
          <div class="pt-2">
            <h3 class="product-title fs-base mb-2">
              <a href="/shop/product/<%- item._id %>"><%- item.product_name %></a>
            </h3>
            <div class="fs-sm">
              <span class="text-muted me-2">Brand:</span>
              <%- item.brand.name %>
            </div>
            <!-- <div class="fs-sm">
                                        <span class="text-muted me-2">Color:</span>
                                        Khaki
                                    </div> -->
            <div class="fs-lg text-accent pt-2">
              <span class="text-muted me-2">Price:</span>
              <!-- $79.<small>50</small> -->
              <%- item.sellingPrice %>
            </div>
          </div>
        </div>
        <div class="pt-2 ps-sm-3 mx-auto mx-sm-0 text-center">
          <button class="btn btn-outline-danger btn-sm" onclick="wishlistRemove('<%- item._id %>')" type="button">
            <i class="ci-trash me-2"></i>
            Remove
          </button>
        </div>
      </div>
      <% }) %>
      <% } else { %>
      <div class="container my-5 mb-6">
        <div class="col my-5 text-center">
          <h2 class="text-muted">
            Wishlist is empty...
          </h2>
          <div class="row">
            <div class="col-xl-8 offset-xl-2">
              <p class="lead text-muted">Add items to your wishlist to see them here.</p>
            </div>
          </div>
          <h3 class="my-5 mt-2">
            <a href="/shop">
              <button class="btn btn-lg btn-outline-primary">Shop Now</button>
            </a>
          </h3>
        </div>
      </div>
      <% } %>

    </section>
  </div>
</div>

<script defer>
  const wishlistRemove = async (productId) => {
    // Ask for confirmation using SweetAlert2
    const result = await Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, remove it!'
    });

    if (result.isConfirmed) {
      // If confirmed, make a POST request to the backend to remove the item from the wishlist
      try {
        const response = await fetch('/user/remove-from-wishlist', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            productId
          })
        });

        if (response.ok) {
          const data = await response.json();
          if (data.success) {
            // If successful, show a success message
            Swal.fire(
              'Removed!',
              'Item has been removed from your wishlist.',
              'success'
            ).then((result) => {
        if (result.isConfirmed) {
          
          window.location.reload();
        }
      });
            // Optionally, update the UI to reflect the change
          } else {
            // If not successful, show an error message
            Swal.fire(
              'Failed!',
              data.message || 'Failed to remove item from wishlist.',
              'error'
            ).then((result) => {
        if (result.isConfirmed) {
          
          window.location.reload();
        }
      });
          }
        } else {
          // Handle server errors
          Swal.fire(
            'Error!',
            'An error occurred while trying to remove the item.',
            'error'
          ).then((result) => {
        if (result.isConfirmed) {
          
          window.location.reload();
        }
      });
        }
      } catch (error) {
        // Handle network errors
        Swal.fire(
          'Error!',
          'An error occurred while trying to remove the item.',
          'error'
        ).then((result) => {
        if (result.isConfirmed) {
          
          window.location.reload();
        }
      });
      }
    }
  };


</script>